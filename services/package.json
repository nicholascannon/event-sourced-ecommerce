{
    "name": "event-sourced-ecommerce",
    "version": "0.0.1",
    "author": "Nicholas Cannon",
    "type": "module",
    "scripts": {
        "build:order-service": "tsc && esbuild ./order-service/main.ts --bundle --platform=node --external:./node_modules/* --target=node16 --format=esm --outfile=./bin/order-service.js",
        "start:order-service": "node ./bin/order-service",
        "watch:order-service": "nodemon --exec 'npm run build:order-service && npm run start:order-service' -w ./order-service -w ./pkg -e *.ts",
        "format:check": "prettier --check .",
        "format:write": "prettier --write .",
        "test": "jest"
    },
    "devDependencies": {
        "@types/jest": "^29.1.2",
        "esbuild": "^0.15.10",
        "jest": "^29.1.2",
        "nodemon": "^2.0.20",
        "prettier": "^2.7.1",
        "ts-jest": "^29.0.3",
        "typescript": "^4.8.4"
    },
    "prettier": {
        "printWidth": 120,
        "singleQuote": true,
        "tabWidth": 4
    },
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "node",
        "rootDir": "."
    }
}
